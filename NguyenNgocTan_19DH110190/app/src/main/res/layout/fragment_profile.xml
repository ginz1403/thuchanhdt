<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="@dimen/mediumSpace" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/ivAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mediumSpace"
            android:src="@drawable/ic_camera"/>
        <EditText
            android:textSize="@dimen/mediumFontSize"
            android:textColor="@color/colorBlack"
            android:id="@+id/tvName"
            android:padding="@dimen/mediumSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_fullname"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="@dimen/mediumSpace"/>
        <TextView
            android:textSize="@dimen/mediumFontSize"
            android:textColor="@color/colorBlack"
            android:id="@+id/tvEmail"
            android:padding="@dimen/mediumSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeSpace"
            android:text="@string/text_email"
            android:drawableLeft="@drawable/icon_email"
            android:drawablePadding="@dimen/mediumSpace"/>
        <EditText
            android:textSize="@dimen/mediumFontSize"
            android:textColor="@color/colorBlack"
            android:id="@+id/tvPhone"
            android:padding="@dimen/mediumSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeSpace"
            android:hint="@string/text_phone"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/mediumSpace"
            android:inputType="phone"/>
        <EditText
            android:textSize="@dimen/mediumFontSize"
            android:textColor="@color/colorBlack"
            android:id="@+id/tvAddress"
            android:padding="@dimen/mediumSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/largeSpace"
            android:hint="@string/text_address"
            android:drawableLeft="@drawable/ic_address"
            android:drawablePadding="@dimen/mediumSpace"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="@string/text_change_password"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/colorWhite"
        android:id="@+id/btnUpdate"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mediumSpace"
        android:text="@string/text_update"
        android:layout_above="@+id/btnChangePassword"
        android:textAllCaps="false"/>
</RelativeLayout>